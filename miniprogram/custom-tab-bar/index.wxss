/* miniprogram/tab-bar/index.wxss */
.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50px;
    background: #ffffff;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
    justify-content: center;
    align-items: center;
    z-index: 99999;
}

.tab-bar-border {
    background-color: rgba(0, 0, 0, 0.15);
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 1px;
}

.tab-bar-item {
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    flex: 1;
}

.tab-bar-item image {
    width: 25px;
    height: 25px;
}

.tab-bar-item view {
    font-size: 10px;
    margin-top: 3px;
}

.add-btn-container {
    width: 32px;
    height: 32px;
    border: 8px solid white;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #4982FF linear-gradient(120deg, #3762c0 0%, #4982FF 100%);
    text-align: center;
    position: relative;
}
.add-btn-container:active{
    opacity: .5;
    transition: .1s opacity;
}
.add-btn-container .white-c {
    position: absolute;
    width: 24px;
    height: 24px;
    left: 4px;
    top: 4px;
    border-radius: 50%;
    background: white;
}

.add-btn-container .white-d {
    position: absolute;
    width: 16px;
    height: 16px;
    left: 4px;
    top: 4px;
    border-radius: 50%;
    background: #4982FF linear-gradient(120deg, #3762c0 0%, #4982FF 100%);
}

.add-btn-container .white-e {
    position: absolute;
    width: 3px;
    height: 3px;
    right: 4px;
    top: 4px;
    border-radius: 50%;
    background: white;
}


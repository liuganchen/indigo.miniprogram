view.user-view {
    display: flex;
    flex-direction: column;
    padding-top: 50px;
}

view.header-view {
    background: #297bff;
    height: 50px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 4vw;
    padding-right: 4vw;
    color: white;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
}

view.avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: white;
    margin-right: 15px;
    overflow: hidden;
}

view.avatar image {
    width: 32px;
    height: 32px;
    object-fit: cover;
}

view.name {
    margin-right: 15px;
}

view.total-price {
    position: sticky;
    top: 50px;
    background: #297bff;
    width: 100%;
    height: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
}

view.total-price view {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 4vw;
    flex: 1;
    color: white;
}

view.month {
    height: 60px;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 4vw;
    padding-right: 4vw;
}

view.month view.icon {
    width: 4px;
    height: 24px;
    border-radius: 2px;
    margin-right: 4vw;
    background: red;
}

view.month view.right {
    margin-left: auto;
}

view.month.red view.icon{
    background: #e91e63;
}

view.month.yellow view.icon{
    background: #ffd740;
}

view.month.blue view.icon{
    background: #69f0ae;
}

view.month view.left {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

view.strong {
    font-size: 16px;
    font-weight: 500;
}
